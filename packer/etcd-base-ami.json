{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret_key": "{{env `AWS_SECRET_KEY`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami": "ami-02eac2c0129f6376b",
      "instance_type": "t2.micro",
      "ssh_username": "centos",
      "ssh_keypair_name": "pgcluster",
      "ssh_private_key_file": "~/.ssh/pgcluster.pem",
      "ami_name": "etcd-dcs-{{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "./provisioners/scripts/bootstrap.sh"
    },
    {
      "type": "ansible",
      "playbook_file": "./provisioners/ansible/etcd.yml"
    }
  ]
}